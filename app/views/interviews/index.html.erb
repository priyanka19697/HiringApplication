<p id="notice"><%= notice %></p>

<div class="container">
	<div class="row bg-light">
		<div class="col-1">
		</div>
		<div class="col-11 ">
			<h1>Interviews</h1>
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th scope="col">Application</th>
						<th scope="col">User</th>
						<th scope="col">Scheduled date</th>
						<th scope="col">Status</th>
						<th scope="col">Interview feedback</th>
						<th scope="col" colspan="2"></th>
					</tr>
				</thead>

				<tbody>
					<% @interviews.each do |interview| %>
						<tr>
							<th scope="row"><%= interview.application.name %></th>
							<td><%= interview.user.name %></td>
							<td><%= interview.scheduled_date %></td>
							<td><%= interview.interview_status %></td>
							<td><%= interview.interview_feedback %></td>
							<td><%= link_to 'Show', interview %></td>
							<td><%= link_to 'Edit', edit_interview_path(interview) %></td>
						</tr>
					<% end %>
				</tbody>
			</table>

			<br>

			<%= link_to 'New Interview', new_interview_path, class: "btn btn-info ml-1" %>
		</div>
