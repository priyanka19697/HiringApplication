<p id="notice"><%= notice %></p>
<div class="container">
	<div class="row bg-light">
		<div class="col-1">
		</div>
		<div class="col-9 ">
			<h1>Assigned Interviews</h1>

			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th scope="col">Application id</th>
						<th scope="col">Application</th>
						<th scope="col">Interviewer</th>
						<th scope="col">Scheduled date</th>
						<th scope="col">Status</th>
						<th scope="col">Interview feedback</th>
						<th scope="col"colspan="3">Options</th>
					</tr>
				</thead>

				<tbody>
					<% @assigned_interviews.each do |interview| %>
						<tr>
							<th scope="row"><%= interview.application_id %></th>
							<td><%= interview.application.name%></td>
							<td><%= interview.user.name %></td>
							<td><%= interview.scheduled_date %></td>
							<td><%= interview.status.name %></td>
							<td><%= interview.interview_feedback %></td>
							<td><%= link_to 'Accept', edit_interview_path(interview.id) %></td>
							<td><%= link_to 'Decline', interview, method: :delete, data: { confirm: 'Are you sure?' } %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<br>
